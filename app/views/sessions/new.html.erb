<h1 class='center'>Log in</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
        <div class='form-group'>
            <div class="col-sm-2 control-label">
                <%= f.label :email %>
            </div>
            <div class="col-sm-8">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true %>
            </div>
        </div>
        <div class='form-group'>
            <div class="col-sm-2 control-label">
                <%= f.label :password %>
            </div>
            <div class="col-sm-8">
                <%= f.password_field :password, class: "form-control", placeholder: "Enter Password", autocomplete: "off" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm10">
                <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
            </div>
        </div>
        <% end %>
        <div class="col-xs-4 col-xs-offset-4">
            <span class="glyphicon glyphicon-remove" id="theodor" aria-hidden="true"></span>
            [ <%= link_to 'Cancel request and back to article listing', articles_path %> ]  
        </div>